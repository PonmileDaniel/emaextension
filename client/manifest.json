{
  "manifest_version": 3,
  "name": "Ema - X Profile Audit & Analytics",
  "version": "1.0.0",
  "description": "Get AI-powered insights on X (Twitter) profiles. Analyze content performance, engagement metrics, and receive personalized growth recommendations.",
  "short_name": "Ema Audit",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ema Audit"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*", "*://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "tabs", "activeTab", "scripting", "sidePanel"],
  "host_permissions": ["*://twitter.com/*", "*://x.com/*"]
}
